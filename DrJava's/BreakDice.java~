public class BreakDice {

public boolean rollADix() {

int dice = rollDice();

while (dice!=6) {

dice = rollDice();

if (dice == 3) 

break;
}

if (dice == 6)

return true;
else
return false;
}

public double rollDice (double b) {

double b = Math.random();
b = b + 1;
b = b * 6
return (int) b;
}

}
