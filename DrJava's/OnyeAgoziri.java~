public class OnyeAgoziri {
  public static void main(String[] arg) {
System.out.println("I ga ekwunwu \"gbowam\" ka odaa ka egbe enu-igwe?");

 String firstName;
 String lastName;
 int hour, minute;
 int nextminute;         
  
 firstName = "Chukwuebuka "; // give firstName the value "Chukwuebuka"
 lastName = "Nzewi";/* give lastName the value "Nzewi" to remind Him of...
 * 29th of August when He wrote this programme*/
 hour = 11; // assign the value 11 to hour
 minute = 39; // set minute to 39
 minute += 10; // increase minute by 10
 minute++; // This would increase my minute by 1
 minute--; // This would decrease the minute by 1
 nextminute = ++minute + 1;
 System.out.println ();
 
 System.out.print(firstName);
 System.out.print (lastName);
 System.out.println (" bu afa mu. Abu mu onye agoziri agozi.");

 System.out.print("The current time is ");
 System.out.print(hour);
 System.out.print(":");
 System.out.print(minute);
 System.out.println(".");
 System.out.println ();
 
 System.out.print("The number of minutes since midnight is ");
 System.out.print (hour * 60 + minute);
 System.out.println (".");
 System.out.println ();
 System.out.print ("One hour down of the current time is ");
 System.out.println (hour-1+" hours");
 System.out.println ();
 
System.out.println("The percentage of the hour that has passed: "+minute * 100 / 60);
System.out.println();
    
System.out.println( "This is the current minute: "+minute+" minutes");
System.out.println("The next minute after the current minute: "+nextminute+" minutes");
}
}